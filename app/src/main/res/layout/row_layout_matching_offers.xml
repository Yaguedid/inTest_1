<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="240dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"

android:background="#fff"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"


    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/OfferTitleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="message"
                android:textColor="#5b5b3e"
                android:textSize="17dp"

                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:fontFamily="@font/myriadpro_bold"
                />
            <TextView
                android:id="@+id/CityOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="casablanca"
                android:textColor="#a2a276"
                android:textSize="17dp"

                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:fontFamily="@font/myriadpro_regular"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Stage"
                    android:textColor="#b7b795"
                    android:textSize="12dp"

                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/myriadpro_regular"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="Paid"
                    android:textColor="#b7b795"
                    android:textSize="12dp"

                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/myriadpro_regular"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="starts 01 Jun 2019"
                    android:textColor="#b7b795"
                    android:textSize="12dp"

                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/myriadpro_regular"
                    />



            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"

            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"

                android:src="@drawable/ibm_icon"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:gravity="center"
                android:text="IBM"
                />
            <TextView
                android:id="@+id/MatchinAvId"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="80%"
                android:textColor="#ff9900"
                android:textSize="17dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:fontFamily="@font/myriadpro_bold"
                />





        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="#f5f5f0"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:src="@drawable/like_icon"
            android:layout_marginLeft="5dp"
            />



        <TextView
            android:id="@+id/DateOffer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:text="Applied in 17 Dec 2019"
            android:textColor="#89895d"
            android:textSize="12dp"

            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/myriadpro_regular"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="apply"
            android:textColor="#FFF"
            android:background="#0086b3"
            android:fontFamily="@font/myriadpro_semibold"
            ></Button>


    </LinearLayout>

</LinearLayout>






</LinearLayout>



