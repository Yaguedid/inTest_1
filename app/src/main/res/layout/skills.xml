<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:background="#3EC2D5FD"
    android:orientation="vertical"
    >

    <TableLayout
        android:background="#3EC2D5FD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:padding="10dp"


                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="17dp"
                            android:layout_marginBottom="8dp"
                            android:text="choisissez vos Compétances"
                            android:textAllCaps="true"
                            android:textStyle="bold"


                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/skiils_id"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/Verifcation_Button"
                                android:text="Compétances ?" />

                            <TextView
                                android:id="@+id/skills_selected"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="13dp"
                                android:textSize="11dp"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/colorPrimaryDark"/>
                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#fff"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:padding="10dp"


                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="17dp"
                            android:layout_marginBottom="8dp"
                            android:text="choisissez Vos Soft Skills "
                            android:textAllCaps="true"
                            android:textStyle="bold"


                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/langue_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/Verifcation_Button"
                                android:text="Soft skills  ?" />

                            <TextView
                                android:id="@+id/langue_selected"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="13dp"
                                android:textSize="11dp"
                                android:layout_marginTop="7dp"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical|center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="17dp"
                    android:text="choisissez Vos languges "
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/parent_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:padding="10dp"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <Spinner
                                android:id="@+id/langue"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="2"
                                android:entries="@array/languge" />

                            <Spinner
                                android:id="@+id/langue_niveau_id"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"

                                android:layout_marginRight="49dp"
                                android:layout_weight="3"
                                android:entries="@array/niveux_langue" />


                        </LinearLayout>

                        <Button
                            android:id="@+id/delete_firs_lang"
                            android:layout_width="17dp"
                            android:layout_height="27dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"

                            android:layout_marginRight="15dp"
                            android:background="@drawable/ic_delete"
                            android:gravity="left|center_vertical"
                             />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <Button
                    android:id="@+id/add_field_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:text="Ajouter Langue"
                    android:textColor="#FFF" />
                <Button
                    android:id="@+id/getText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:text=" get text"
                    android:textColor="#FFF" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="8dp"
                    android:text="choisissez Vos languges "
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/parent_linear_layout_Experience"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:padding="10dp"
                        app:cardBackgroundColor="#fff"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">


                        <Button
                            android:id="@+id/delete_Experience"
                            android:layout_width="20dp"
                            android:layout_height="27dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/ic_delete"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="0dp"
                                    android:minWidth="170dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:entries="@array/languge"
                                    android:hint="Titre"
                                    android:padding="10dp"

                                    />

                                <EditText
                                    android:layout_width="0dp"
                                    android:minWidth="170dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_weight="1"
                                    android:entries="@array/languge"
                                    android:hint="Société"
                                    android:padding="10dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="0dp"
                                    android:minWidth="170dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:entries="@array/languge"
                                    android:hint="Date de début"
                                    android:padding="10dp"

                                    />

                                <EditText
                                    android:layout_width="0dp"
                                    android:minWidth="170dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_weight="1"
                                    android:entries="@array/languge"
                                    android:hint="Date de fin"
                                    android:padding="10dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <Button
                    android:id="@+id/add_Experience_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:text="Ajouter Experience"
                    android:textColor="#FFF"
                    />
                <Button
                    android:id="@+id/getExperiences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:text="show experiences selected"
                    android:textColor="#FFF"
                    />

            </LinearLayout>

        </TableRow>


    </TableLayout>


</ScrollView>